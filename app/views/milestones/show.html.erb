<%- model_class = Milestone -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="row"> 
  <div class="col-xs-9">

    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
      <dd><%= @milestone.name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @milestone.description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
      <dd><%= @milestone.start_date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
      <dd><%= @milestone.end_date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
      <dd><%= @milestone.status %></dd>
    </dl>

    <%= link_to t('.back', :default => t("helpers.links.back")),
                  milestones_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_milestone_path(@milestone), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  milestone_path(@milestone),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

  </div>

  <div class="col-xs-3">
    <%= link_to "Tasks of the Milestone", project_tasks_project_path,:class => 'btn btn-default' %>
    <br>
    <br>   
    <%= link_to "Followers of Milestone", follower_users_path(milestone_id: @milestone.id), :class => 'btn btn-default' %>
  </div>
</div>