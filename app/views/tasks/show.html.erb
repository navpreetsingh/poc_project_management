<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row"> 
    <div class="col-xs-9">

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @task.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
        <dd><%= @task.description %></dd>
        <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
        <dd><%= @task.start_date %></dd>
        <dt><strong><%= model_class.human_attribute_name(:end_date) %>:</strong></dt>
        <dd><%= @task.end_date %></dd>
        <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
        <dd><%= @task.status %></dd>
        <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
        <dd><%= @task.project_id %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")),
                    tasks_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_task_path(@task), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    task_path(@task),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
  </div>

    <div class="col-xs-3">
      <%= link_to "Add TO DO LIST", task_to_do_lists_path(@task),:class => 'btn btn-default' %>      
    </div>
  </div>