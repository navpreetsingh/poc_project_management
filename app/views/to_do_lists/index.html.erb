<%- model_class = ToDoList -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:task_id) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:estimated_hours) %></th>      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @to_do_lists.each do |to_do_list| %>
      <tr>
        <td><%= link_to to_do_list.id, to_do_list_path(to_do_list) %></td>
        <td><%= to_do_list.task_id %></td>
        <td><%= to_do_list.content %></td>
        <td><%= to_do_list.priority %></td>
        <td><%= to_do_list.estimated_hours %></td>        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_to_do_list_path(to_do_list), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      to_do_list_path(to_do_list),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_to_do_list_path,
            :class => 'btn btn-primary' %>
